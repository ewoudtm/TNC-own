<div class="row">
  <div class="col-xs-12" class="products-container">
    <h1> Welcome: <%= current_user.first_name %></h1>
    <hr>
    <h2> For these products you have started a negotiation: </h2>
    <div class="col-xs-12 products-container">
      <% current_user.prod_negs.each do |prod_neg| %>
        <div class="product-wrapper">
          <div class="product-image">
            <%= link_to image_tag(prod_neg.product.image), prod_neg_path(prod_neg.id)  %>
          </div>
          <div class="product-description">
            <h3><%= prod_neg.product.title %></h3>
            <h4>Starting Price: <%= prod_neg.product.start_price %></h4>
            <% if prod_neg.single_bids.last != nil %>
              <h4>Last bid: <%= prod_neg.single_bids.last.price %> </h4>
            <% else %>
              <h4>No bidding done so far</h4>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
